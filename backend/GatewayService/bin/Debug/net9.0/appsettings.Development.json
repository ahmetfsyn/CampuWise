{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "eventRoute": {
        "ClusterId": "eventCluster",
        "Match": {
          "Path": "/api/event-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/user-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "eventCluster": {
        "Destinations": {
          "eventDest": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userDest": {
            "Address": "http://localhost:5000"
          }
        }
      }
    }
  }
}