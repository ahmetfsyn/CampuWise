{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build EventService",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "event-service/src/EventService.WebApi/EventService.WebApi.csproj",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build UserService",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "user-service/src/UserService.WebApi/UserService.WebApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build Both Services",
      "dependsOn": ["build EventService", "build UserService"],
      "dependsOrder": "sequence",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
